<% include ../layout/head %>
<% include ../header/header %>
<div class="container">
<div class="row">
    <div class="col-md-12">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        <% orders.forEach(function(order, index){ %>
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        <% order.items.forEach(function(item, index){ %>
                            <li class="list-group-item">
                                <span class="badge"> <%= item.item.price %> </span>
                                <%= item.item.title %> | <%= item.qty%>
                            </li>
                        <% }) %>
                    </ul>
                </div>
                <div class="panel-footer"> $ <%= order.cart.totalPrice %> </div>
            </div>
        <% }) %>

    </div>
</div>
</div>
<% include ../layout/footer %>